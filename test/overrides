# Placeholder file to overwrite ci-operator variables for tests.
# This file should be used ONLY for development. 
# No permanent overrides should be added here. 
# Permanent overrides should be in openshift/release repository
#
# example: 
# export TEST_FOCUS="my-awesome-test-I-want-to-run"
TEST_FOCUS="Suite:openshift/conformance/parallel"
TEST_SKIP=".*((The HAProxy router should set Forwarded headers appropriately)|(\[Conformance\]\[templates\] templateservicebroker)|(\[Feature:Prometheus\]\[Conformance\] Prometheus when installed to the cluster should start)).*"
ginkgo -v -noColor -nodes=30 $( which extended.test ) -- \
            -ginkgo.focus="${TEST_FOCUS}" -ginkgo.skip="${TEST_SKIP}" \
            -e2e-output-dir /tmp/artifacts -report-dir /tmp/artifacts/junit \
            -test.timeout=2h || rc=$?
exit $rc

